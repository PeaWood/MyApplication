<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:n1="http://schemas.android.com/apk/res/android"
    n1:id="@id/activity_main"
    n1:layout_width="fill_parent"
    n1:layout_height="fill_parent"
    n1:background="@color/colorBackground"
    n1:paddingBottom="@dimen/activity_vertical_margin"
    n1:paddingLeft="@dimen/activity_horizontal_margin"
    n1:paddingRight="@dimen/activity_horizontal_margin"
    n1:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        n1:id="@id/textView"
        n1:layout_width="fill_parent"
        n1:layout_height="wrap_content"
        n1:gravity="center"
        n1:text="请将NFC标签或者贴纸靠近手机背面" />

    <TextView
        n1:id="@+id/tv_nfctext"
        n1:layout_width="fill_parent"
        n1:layout_height="wrap_content"
        n1:layout_alignParentLeft="true"
        n1:layout_below="@id/textView"
        n1:layout_marginTop="10.0dip" />

    <ImageView
        n1:layout_width="wrap_content"
        n1:layout_height="wrap_content"
        n1:layout_below="@id/tv_nfctext"
        n1:src="@drawable/nfc_read" />
</RelativeLayout>