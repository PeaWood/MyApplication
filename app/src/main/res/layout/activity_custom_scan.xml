<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:n1="http://schemas.android.com/apk/res/android"
    n1:layout_width="fill_parent"
    n1:layout_height="fill_parent"
    n1:paddingBottom="@dimen/activity_vertical_margin"
    n1:paddingLeft="@dimen/activity_horizontal_margin"
    n1:paddingRight="@dimen/activity_horizontal_margin"
    n1:paddingTop="@dimen/activity_vertical_margin">

    <Button
        n1:id="@+id/btn_switch"
        n1:layout_width="fill_parent"
        n1:layout_height="wrap_content"
        n1:layout_alignParentBottom="true"
        n1:layout_centerHorizontal="true"
        n1:layout_marginLeft="15.0dip"
        n1:layout_marginRight="15.0dip"
        n1:layout_marginTop="0.0dip"
        n1:background="@drawable/button_select"
        n1:padding="10.0dip"
        n1:text="闪光灯"
        n1:textColor="@color/white"
        n1:textSize="20.0sp" />

    <com.journeyapps.barcodescanner.DecoratedBarcodeView xmlns:n2="http://schemas.android.com/apk/res-auto"
        n1:id="@+id/dbv_custom"
        n1:layout_width="fill_parent"
        n1:layout_height="fill_parent"
        n1:layout_above="@id/btn_switch"
        n1:layout_marginBottom="30.0dip"
        n2:zxing_framing_rect_height="200.0dip"
        n2:zxing_framing_rect_width="200.0dip"
        n2:zxing_preview_scaling_strategy="fitXY"
        n2:zxing_use_texture_view="true" />
</RelativeLayout>