<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:n1="http://schemas.android.com/apk/res/android"
    n1:layout_width="fill_parent"
    n1:layout_height="fill_parent"
    n1:background="@color/backgroundcolor"
    n1:orientation="vertical"
    n1:tag="layout/activity_bottle_exchange_0">

    <ScrollView
        n1:layout_width="fill_parent"
        n1:layout_height="fill_parent"
        n1:layout_above="@id/llybuttom"
        n1:layout_alignParentStart="true"
        n1:layout_marginBottom="-53dp"
        n1:fadingEdge="none">

        <LinearLayout
            n1:layout_width="fill_parent"
            n1:layout_height="wrap_content"
            n1:orientation="vertical">

            <LinearLayout
                n1:layout_width="fill_parent"
                n1:layout_height="30.0dip"
                n1:background="@color/colorPrimary"
                n1:orientation="horizontal">

                <TextView
                    n1:layout_width="wrap_content"
                    n1:layout_height="wrap_content"
                    n1:layout_gravity="center"
                    n1:layout_marginLeft="16.0dip"
                    n1:layout_weight="1.0"
                    n1:text="读卡器状态"
                    n1:textColor="@color/white"
                    n1:textSize="20.0sp" />

                <TextView
                    n1:id="@+id/msgText"
                    n1:layout_width="wrap_content"
                    n1:layout_height="wrap_content"
                    n1:layout_gravity="center"
                    n1:layout_weight="3.0"
                    n1:text="读卡器状态"
                    n1:textColor="@color/colorAccent"
                    n1:textSize="18.0sp" />

                <ImageView
                    n1:id="@+id/imageView_search"
                    n1:layout_width="30.0dip"
                    n1:layout_height="30.0dip"
                    n1:layout_alignParentRight="true"
                    n1:layout_marginRight="10.0dip"
                    n1:src="@drawable/abs__menu_dropdown_panel_holo_light" />
            </LinearLayout>

            <LinearLayout
                n1:layout_width="fill_parent"
                n1:layout_height="30.0dip"
                n1:background="@color/colorPrimary"
                n1:orientation="horizontal">

                <TextView
                    n1:layout_width="wrap_content"
                    n1:layout_height="wrap_content"
                    n1:layout_gravity="center"
                    n1:layout_marginLeft="16.0dip"
                    n1:layout_weight="1.0"
                    n1:text="蓝牙秤状态"
                    n1:textColor="@color/white"
                    n1:textSize="20.0sp" />

                <TextView
                    n1:id="@+id/msgText_weightDevice"
                    n1:layout_width="wrap_content"
                    n1:layout_height="wrap_content"
                    n1:layout_gravity="center"
                    n1:layout_weight="3.0"
                    n1:text="蓝牙秤状态"
                    n1:textColor="@color/colorAccent"
                    n1:textSize="18.0sp" />

                <ImageView
                    n1:id="@+id/imageView_search_weightDevice"
                    n1:layout_width="30.0dip"
                    n1:layout_height="30.0dip"
                    n1:layout_alignParentRight="true"
                    n1:layout_marginRight="10.0dip"
                    n1:src="@drawable/abs__menu_dropdown_panel_holo_light" />
            </LinearLayout>

            <LinearLayout
                n1:layout_width="fill_parent"
                n1:layout_height="40.0dip"
                n1:layout_marginTop="10.0dip"
                n1:orientation="horizontal">

                <RadioGroup
                    n1:id="@+id/radioGroup_nfc_id"
                    n1:layout_width="fill_parent"
                    n1:layout_height="fill_parent"
                    n1:orientation="horizontal">

                    <RadioButton
                        n1:id="@+id/radioButton_kp_id"
                        n1:layout_width="fill_parent"
                        n1:layout_height="wrap_content"
                        n1:layout_weight="1.0"
                        n1:text="空瓶录入"
                        n1:textColor="@color/colorPrimaryDark"
                        n1:textSize="22.0dip" />

                    <RadioButton
                        n1:id="@+id/radioButton_zp_id"
                        n1:layout_width="fill_parent"
                        n1:layout_height="wrap_content"
                        n1:layout_weight="1.0"
                        n1:text="重瓶录入"
                        n1:textColor="@color/colorPrimaryDark"
                        n1:textSize="22.0dip" />
                </RadioGroup>
            </LinearLayout>

            <TextView
                n1:layout_width="fill_parent"
                n1:layout_height="0.5dip"
                n1:layout_marginTop="5.0dip"
                n1:background="@color/textgray" />

            <RelativeLayout
                n1:layout_width="fill_parent"
                n1:layout_height="wrap_content"
                n1:layout_marginLeft="10.0dip"
                n1:orientation="horizontal" />

            <LinearLayout
                n1:layout_width="fill_parent"
                n1:layout_height="wrap_content"
                n1:orientation="vertical"
                n1:visibility="visible">

                <RelativeLayout
                    n1:layout_width="fill_parent"
                    n1:layout_height="wrap_content"
                    n1:layout_marginLeft="10.0dip"
                    n1:orientation="horizontal">

                    <TextView
                        n1:layout_width="fill_parent"
                        n1:layout_height="fill_parent"
                        n1:layout_marginTop="10.0dip"
                        n1:layout_weight="1.0"
                        n1:gravity="center_vertical"
                        n1:text="空瓶回收"
                        n1:textColor="@color/black"
                        n1:textSize="20.0sp" />

                    <ImageView
                        n1:id="@+id/imageView_KPEYE"
                        n1:layout_width="30.0dip"
                        n1:layout_height="30.0dip"
                        n1:layout_alignParentRight="true"
                        n1:layout_marginTop="10.0dip"
                        n1:layout_marginRight="10.0dip"
                        n1:src="@drawable/icon_setting" />
                </RelativeLayout>

                <RelativeLayout
                    n1:layout_width="fill_parent"
                    n1:layout_height="wrap_content"
                    n1:layout_marginLeft="10.0dip"
                    n1:gravity="center_vertical"
                    n1:orientation="horizontal">

                    <Spinner
                        n1:id="@+id/spinner_gp_head_KP"
                        n1:layout_width="wrap_content"
                        n1:layout_height="wrap_content"
                        n1:layout_marginTop="10.0dip"
                        n1:entries="@array/spinner_array_gp_head" />

                    <EditText
                        n1:id="@+id/input_bottleIdKP"
                        n1:layout_width="fill_parent"
                        n1:layout_height="wrap_content"
                        n1:layout_marginLeft="10.0dip"
                        n1:layout_marginTop="10.0dip"
                        n1:layout_toLeftOf="@id/imageView_addKPManual"
                        n1:layout_toRightOf="@id/spinner_gp_head_KP"
                        n1:background="#00000000"
                        n1:hint="手动输入钢瓶号"
                        n1:textSize="16.0sp" />

                    <ImageView
                        n1:id="@+id/imageView_addKPManual"
                        n1:layout_width="30.0dip"
                        n1:layout_height="30.0dip"
                        n1:layout_alignParentRight="true"
                        n1:layout_marginTop="10.0dip"
                        n1:layout_marginRight="10.0dip"
                        n1:src="@drawable/icon_add" />
                </RelativeLayout>

                <TextView
                    n1:layout_width="fill_parent"
                    n1:layout_height="0.5dip"
                    n1:layout_marginTop="5.0dip"
                    n1:background="@color/textgray" />

                <ListView
                    n1:id="@+id/listview_kp"
                    n1:layout_width="fill_parent"
                    n1:layout_height="wrap_content" />
            </LinearLayout>

            <RelativeLayout
                n1:layout_width="fill_parent"
                n1:layout_height="fill_parent"
                n1:descendantFocusability="blocksDescendants"
                n1:orientation="horizontal">

                <TextView
                    n1:layout_width="200.0dip"
                    n1:layout_height="wrap_content"
                    n1:layout_marginLeft="20.0dip"
                    n1:layout_marginTop="10.0dip"
                    n1:text="合计"
                    n1:textColor="@color/popup_main_background" />

                <TextView
                    n1:id="@+id/items_totalCountKP"
                    n1:layout_width="wrap_content"
                    n1:layout_height="wrap_content"
                    n1:layout_alignParentRight="true"
                    n1:layout_marginRight="10.0dip"
                    n1:text="0"
                    n1:textColor="@color/colorAccent"
                    n1:textSize="20.0dip" />
            </RelativeLayout>

            <LinearLayout
                n1:layout_width="fill_parent"
                n1:layout_height="wrap_content"
                n1:orientation="vertical"
                n1:visibility="visible">

                <RelativeLayout
                    n1:layout_width="fill_parent"
                    n1:layout_height="wrap_content"
                    n1:layout_marginLeft="10.0dip"
                    n1:orientation="horizontal">

                    <TextView
                        n1:layout_width="fill_parent"
                        n1:layout_height="fill_parent"
                        n1:layout_marginTop="10.0dip"
                        n1:layout_weight="1.0"
                        n1:gravity="center_vertical"
                        n1:text="重瓶录入"
                        n1:textColor="@color/black"
                        n1:textSize="20.0sp" />

                    <ImageView
                        n1:id="@+id/imageView_ZPEYE"
                        n1:layout_width="30.0dip"
                        n1:layout_height="30.0dip"
                        n1:layout_alignParentRight="true"
                        n1:layout_marginTop="10.0dip"
                        n1:layout_marginRight="10.0dip"
                        n1:src="@drawable/icon_setting" />
                </RelativeLayout>

                <RelativeLayout
                    n1:layout_width="fill_parent"
                    n1:layout_height="wrap_content"
                    n1:layout_marginLeft="10.0dip"
                    n1:orientation="horizontal">

                    <Spinner
                        n1:id="@+id/spinner_gp_head_ZP"
                        n1:layout_width="wrap_content"
                        n1:layout_height="wrap_content"
                        n1:layout_marginTop="10.0dip"
                        n1:entries="@array/spinner_array_gp_head" />

                    <EditText
                        n1:id="@+id/input_bottleIdZP"
                        n1:layout_width="fill_parent"
                        n1:layout_height="wrap_content"
                        n1:layout_marginTop="10.0dip"
                        n1:layout_toLeftOf="@id/imageView_addZPManual"
                        n1:layout_toRightOf="@id/spinner_gp_head_ZP"
                        n1:background="#00000000"
                        n1:hint="手动输入钢瓶号"
                        n1:textSize="16.0sp" />

                    <ImageView
                        n1:id="@+id/imageView_addZPManual"
                        n1:layout_width="30.0dip"
                        n1:layout_height="30.0dip"
                        n1:layout_alignParentRight="true"
                        n1:layout_marginTop="10.0dip"
                        n1:layout_marginRight="10.0dip"
                        n1:src="@drawable/icon_add" />
                </RelativeLayout>

                <TextView
                    n1:layout_width="fill_parent"
                    n1:layout_height="0.5dip"
                    n1:layout_marginTop="5.0dip"
                    n1:background="@color/textgray" />

                <ListView
                    n1:id="@+id/listview_zp"
                    n1:layout_width="fill_parent"
                    n1:layout_height="wrap_content" />
            </LinearLayout>

            <RelativeLayout
                n1:layout_width="fill_parent"
                n1:layout_height="fill_parent"
                n1:descendantFocusability="blocksDescendants"
                n1:orientation="horizontal">

                <TextView
                    n1:layout_width="200.0dip"
                    n1:layout_height="wrap_content"
                    n1:layout_marginLeft="20.0dip"
                    n1:layout_marginTop="10.0dip"
                    n1:text="合计"
                    n1:textColor="@color/popup_main_background" />

                <TextView
                    n1:id="@+id/items_totalCountZP"
                    n1:layout_width="wrap_content"
                    n1:layout_height="wrap_content"
                    n1:layout_alignParentRight="true"
                    n1:layout_marginRight="10.0dip"
                    n1:text="0"
                    n1:textColor="@color/colorAccent"
                    n1:textSize="20.0dip" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        n1:id="@+id/llybuttom"
        n1:layout_width="fill_parent"
        n1:layout_height="wrap_content"
        n1:layout_alignParentBottom="true"
        n1:layout_marginBottom="5.0dip"
        n1:orientation="vertical">

        <Button
            n1:id="@+id/button_next"
            n1:layout_width="fill_parent"
            n1:layout_height="wrap_content"
            n1:layout_marginLeft="15.0dip"
            n1:layout_marginRight="15.0dip"
            n1:layout_marginTop="0.0dip"
            n1:background="@drawable/button_select"
            n1:padding="10.0dip"
            n1:text="用户确认"
            n1:textColor="@color/white"
            n1:textSize="20.0sp" />
    </LinearLayout>
</RelativeLayout>