<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:n1="http://schemas.android.com/apk/res/android"
    n1:layout_width="fill_parent"
    n1:layout_height="fill_parent"
    n1:descendantFocusability="blocksDescendants"
    n1:orientation="horizontal">

    <ImageView
        n1:id="@+id/items_imageView1"
        n1:layout_width="50.0dip"
        n1:layout_height="50.0dip"
        n1:layout_marginTop="15.0dip"
        n1:src="@drawable/icon_bottle" />

    <TextView
        n1:id="@+id/items_number"
        n1:layout_width="300.0dip"
        n1:layout_height="wrap_content"
        n1:layout_marginLeft="80.0dip"
        n1:layout_marginTop="15.0dip"
        n1:textColor="@color/transparent_background" />

    <TextView
        n1:id="@+id/items_spec"
        n1:layout_width="300.0dip"
        n1:layout_height="wrap_content"
        n1:layout_alignStart="@+id/items_number"
        n1:layout_below="@+id/items_number"
        n1:textColor="@color/transparent_background" />

    <TextView
        n1:id="@+id/items_serviceStatus"
        n1:layout_width="300.0dip"
        n1:layout_height="wrap_content"
        n1:layout_marginLeft="80.0dip"
        n1:layout_marginTop="55.0dip"
        n1:textColor="@color/orange" />
</RelativeLayout>