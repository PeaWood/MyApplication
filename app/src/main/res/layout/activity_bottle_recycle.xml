<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:n1="http://schemas.android.com/apk/res/android"
    n1:layout_width="fill_parent"
    n1:layout_height="fill_parent"
    n1:background="@color/backgroundcolor"
    n1:orientation="vertical">
    <LinearLayout
        n1:id="@+id/linearLayout"
        n1:layout_width="match_parent"
        n1:layout_height="50.0dip"
        n1:background="@color/colorPrimary"
        n1:orientation="horizontal">
        <ImageView
            n1:id="@+id/img_back"
            n1:layout_width="25dip"
            n1:layout_height="25dip"
            n1:layout_gravity="center"
            n1:layout_marginLeft="5.0dip"
            n1:contentDescription="@null"
            n1:src="@drawable/back_arrow" />
        <TextView
            n1:layout_width="wrap_content"
            n1:layout_height="wrap_content"
            n1:layout_gravity="center"
            n1:layout_marginLeft="16.0dip"
            n1:layout_weight="1.0"
            n1:text="退换货"
            n1:textColor="@color/white"
            n1:textSize="25.0sp" />
    </LinearLayout>

    <ScrollView
        n1:layout_width="fill_parent"
        n1:layout_height="fill_parent"
        n1:layout_above="@id/llybuttom"
        n1:layout_below="@id/linearLayout"
        n1:fadingEdge="none">

        <LinearLayout
            n1:layout_width="fill_parent"
            n1:layout_height="wrap_content"
            n1:orientation="vertical">

            <LinearLayout
                n1:layout_width="fill_parent"
                n1:layout_height="50.0dip"
                n1:background="@color/colorPrimary"
                n1:orientation="horizontal">

                <TextView
                    n1:layout_width="wrap_content"
                    n1:layout_height="wrap_content"
                    n1:layout_gravity="center"
                    n1:layout_marginLeft="16.0dip"
                    n1:layout_weight="1.0"
                    n1:text="退换货"
                    n1:visibility="gone"
                    n1:textColor="@color/white"
                    n1:textSize="20.0sp" />

                <EditText
                    n1:id="@+id/msgText"
                    n1:layout_width="wrap_content"
                    n1:layout_height="wrap_content"
                    n1:layout_gravity="center"
                    n1:layout_weight="3.0"
                    n1:editable="false"
                    n1:text=""
                    n1:textColor="@color/white"
                    n1:textSize="15.0sp" />

                <ImageView
                    n1:id="@+id/imageView_search"
                    n1:layout_width="30.0dip"
                    n1:layout_height="30.0dip"
                    n1:layout_alignParentRight="true"
                    n1:layout_marginRight="10.0dip"
                    n1:layout_marginTop="10.0dip"
                    n1:src="@drawable/abs__menu_dropdown_panel_holo_light" />
            </LinearLayout>

            <LinearLayout
                n1:layout_width="fill_parent"
                n1:layout_height="40.0dip"
                n1:layout_marginTop="10.0dip"
                n1:orientation="horizontal">

                <RadioGroup
                    n1:id="@+id/radioGroup_nfc_id"
                    n1:layout_width="fill_parent"
                    n1:layout_height="fill_parent"
                    n1:orientation="horizontal">

                    <RadioButton
                        n1:id="@+id/radioButton_kp_recyle"
                        n1:layout_width="fill_parent"
                        n1:layout_height="wrap_content"
                        n1:layout_weight="1.0"
                        n1:text="空瓶回收"
                        n1:textColor="@color/colorPrimaryDark"
                        n1:textSize="20.0dip" />

                    <RadioButton
                        n1:id="@+id/radioButton_zp_recyle"
                        n1:layout_width="fill_parent"
                        n1:layout_height="wrap_content"
                        n1:layout_weight="1.0"
                        n1:text="重瓶回收"
                        n1:textColor="@color/colorPrimaryDark"
                        n1:textSize="20.0dip" />

                    <RadioButton
                        n1:id="@+id/radioButton_zp_reput"
                        n1:layout_width="fill_parent"
                        n1:layout_height="wrap_content"
                        n1:layout_weight="1.0"
                        n1:text="重瓶落户"
                        n1:textColor="@color/colorPrimaryDark"
                        n1:textSize="20.0dip" />
                </RadioGroup>
            </LinearLayout>

            <TextView
                n1:layout_width="fill_parent"
                n1:layout_height="0.5dip"
                n1:layout_marginTop="5.0dip"
                n1:background="@color/textgray" />

            <LinearLayout
                n1:layout_width="fill_parent"
                n1:layout_height="wrap_content"
                n1:orientation="vertical"
                n1:visibility="visible">

                <LinearLayout
                    n1:layout_width="fill_parent"
                    n1:layout_height="wrap_content"
                    n1:orientation="vertical"
                    n1:visibility="visible">

                    <RelativeLayout
                        n1:layout_width="fill_parent"
                        n1:layout_height="wrap_content"
                        n1:layout_marginLeft="10.0dip"
                        n1:gravity="center_vertical"
                        n1:orientation="horizontal">

                        <TextView
                            n1:id="@+id/costomer"
                            n1:layout_width="wrap_content"
                            n1:layout_height="wrap_content"
                            n1:layout_marginTop="10.0dip"
                            n1:layout_weight="1.0"
                            n1:gravity="center_vertical"
                            n1:text=" 选择客户："
                            n1:textColor="@color/black"
                            n1:textSize="20.0sp" />

                        <EditText
                            n1:id="@+id/cstCode"
                            n1:layout_width="wrap_content"
                            n1:layout_height="30.0dip"
                            n1:layout_marginLeft="10.0dip"
                            n1:layout_marginTop="10.0dip"
                            n1:layout_toLeftOf="@id/imageView_KPEYE"
                            n1:layout_toRightOf="@id/costomer"
                            n1:background="#00000000"
                            n1:hint="手动输入客户编码"
                            n1:textSize="16.0sp" />

                        <ImageView
                            n1:id="@+id/imageView_KPEYE"
                            n1:layout_width="30.0dip"
                            n1:layout_height="30.0dip"
                            n1:layout_alignParentRight="true"
                            n1:layout_marginRight="10.0dip"
                            n1:layout_marginTop="10.0dip"
                            n1:src="@drawable/icon_setting" />
                    </RelativeLayout>
                </LinearLayout>

                <TextView
                    n1:layout_width="fill_parent"
                    n1:layout_height="0.5dip"
                    n1:layout_marginTop="5.0dip"
                    n1:background="@color/textgray" />

                <RelativeLayout
                    n1:layout_width="fill_parent"
                    n1:layout_height="wrap_content"
                    n1:layout_marginLeft="10.0dip"
                    n1:gravity="center_vertical"
                    n1:orientation="horizontal">

                    <Spinner
                        n1:id="@+id/spinner_gp_head_KP"
                        n1:layout_width="wrap_content"
                        n1:layout_height="wrap_content"
                        n1:layout_marginTop="10.0dip"
                        n1:entries="@array/spinner_array_gp_head" />

                    <EditText
                        n1:id="@+id/input_bottleIdKP"
                        n1:layout_width="fill_parent"
                        n1:layout_height="wrap_content"
                        n1:layout_marginLeft="10.0dip"
                        n1:layout_marginTop="10.0dip"
                        n1:layout_toLeftOf="@id/imageView_addKPManual"
                        n1:layout_toRightOf="@id/spinner_gp_head_KP"
                        n1:background="#00000000"
                        n1:hint="手动输入钢瓶号"
                        n1:textSize="16.0sp" />

                    <ImageView
                        n1:id="@+id/imageView_addKPManual"
                        n1:layout_width="30.0dip"
                        n1:layout_height="30.0dip"
                        n1:layout_alignParentRight="true"
                        n1:layout_marginRight="10.0dip"
                        n1:layout_marginTop="10.0dip"
                        n1:src="@drawable/icon_add" />
                </RelativeLayout>

                <TextView
                    n1:layout_width="fill_parent"
                    n1:layout_height="0.5dip"
                    n1:layout_marginTop="5.0dip"
                    n1:background="@color/textgray" />

                <RelativeLayout
                    n1:layout_width="fill_parent"
                    n1:layout_height="wrap_content"
                    n1:layout_marginLeft="10.0dip"
                    n1:orientation="horizontal">

                    <TextView
                        n1:layout_width="fill_parent"
                        n1:layout_height="fill_parent"
                        n1:layout_marginTop="10.0dip"
                        n1:layout_weight="1.0"
                        n1:gravity="center_vertical"
                        n1:text="交接区"
                        n1:textColor="@color/black"
                        n1:textSize="20.0sp" />
                </RelativeLayout>

                <ListView
                    n1:id="@+id/listview_kp"
                    n1:layout_width="fill_parent"
                    n1:layout_height="wrap_content" />
            </LinearLayout>

            <RelativeLayout
                n1:layout_width="fill_parent"
                n1:layout_height="fill_parent"
                n1:descendantFocusability="blocksDescendants"
                n1:orientation="horizontal">

                <TextView
                    n1:layout_width="200.0dip"
                    n1:layout_height="wrap_content"
                    n1:layout_marginLeft="20.0dip"
                    n1:layout_marginTop="10.0dip"
                    n1:text="合计"
                    n1:textColor="@color/popup_main_background" />

                <TextView
                    n1:id="@+id/items_totalCountKP"
                    n1:layout_width="wrap_content"
                    n1:layout_height="wrap_content"
                    n1:layout_alignParentRight="true"
                    n1:layout_marginRight="10.0dip"
                    n1:text=""
                    n1:textColor="@color/colorAccent"
                    n1:textSize="20.0dip" />
            </RelativeLayout>

            <RelativeLayout
                n1:id="@+id/RelativeLayout_san"
                n1:layout_width="fill_parent"
                n1:layout_height="wrap_content"
                n1:layout_marginLeft="10.0dip"
                n1:orientation="horizontal">

                <TextView
                    n1:id="@+id/textView_userInfo"
                    n1:layout_width="fill_parent"
                    n1:layout_height="wrap_content"
                    n1:layout_marginTop="10.0dip"
                    n1:background="#00000000"
                    n1:hint="用户卡评价"
                    n1:textSize="16.0sp" />

                <ImageView
                    n1:id="@+id/imageView_Scan"
                    n1:layout_width="30.0dip"
                    n1:layout_height="30.0dip"
                    n1:layout_alignParentRight="true"
                    n1:layout_marginRight="10.0dip"
                    n1:layout_marginTop="10.0dip"
                    n1:src="@drawable/icon_camera" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        n1:id="@+id/llybuttom"
        n1:layout_width="fill_parent"
        n1:layout_height="wrap_content"
        n1:layout_alignParentBottom="true"
        n1:layout_marginBottom="5.0dip"
        n1:orientation="vertical">

        <Button
            n1:id="@+id/button_next"
            n1:layout_width="fill_parent"
            n1:layout_height="wrap_content"
            n1:layout_marginLeft="15.0dip"
            n1:layout_marginRight="15.0dip"
            n1:layout_marginTop="0.0dip"
            n1:background="@drawable/button_select"
            n1:padding="10.0dip"
            n1:text="完成"
            n1:textColor="@color/white"
            n1:textSize="20.0sp" />
    </LinearLayout>
</RelativeLayout>