<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:n1="http://schemas.android.com/apk/res/android"
    n1:layout_width="fill_parent"
    n1:layout_height="fill_parent"
    n1:background="@color/backgroundcolor"
    n1:orientation="vertical">

    <ScrollView
        n1:layout_width="fill_parent"
        n1:layout_height="fill_parent"
        n1:fadingEdge="none">

        <LinearLayout
            n1:layout_width="fill_parent"
            n1:layout_height="fill_parent"
            n1:orientation="vertical">

            <LinearLayout
                n1:id="@id/lL_mine2"
                n1:layout_width="fill_parent"
                n1:layout_height="120.0dip"
                n1:layout_weight="1.0"
                n1:background="@color/colorPrimaryDark"
                n1:gravity="center_vertical"
                n1:orientation="vertical"
                n1:visibility="visible">

                <LinearLayout
                    n1:layout_width="fill_parent"
                    n1:layout_height="wrap_content"
                    n1:layout_marginLeft="10.0dip"
                    n1:orientation="horizontal">

                    <ImageView
                        n1:id="@id/userImage"
                        n1:layout_width="84.0dip"
                        n1:layout_height="74.0dip"
                        n1:layout_marginTop="10.0dip"
                        n1:src="@drawable/icon_default_user" />

                    <TextView
                        n1:id="@id/textview_username"
                        n1:layout_width="wrap_content"
                        n1:layout_height="wrap_content"
                        n1:layout_marginRight="10.0dip"
                        n1:layout_marginTop="30.0dip"
                        n1:layout_weight="6.0"
                        n1:text="账户"
                        n1:textColor="@color/white"
                        n1:textSize="20.0sp" />

                    <ImageView
                        n1:id="@id/imageView_userQRcode"
                        n1:layout_width="40.0dip"
                        n1:layout_height="40.0dip"
                        n1:layout_marginTop="25.0dip"
                        n1:layout_weight="1.0"
                        n1:src="@drawable/icon_reflesh" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                n1:layout_width="fill_parent"
                n1:layout_height="0.5dip"
                n1:background="@color/textgray" />

            <TextView
                n1:layout_width="fill_parent"
                n1:layout_height="0.5dip"
                n1:background="@color/textgray" />

            <TextView
                n1:layout_width="fill_parent"
                n1:layout_height="fill_parent"
                n1:layout_marginTop="30.0dip"
                n1:layout_weight="1.0"
                n1:gravity="center_vertical"
                n1:text="相关业务"
                n1:textSize="15.0sp" />

            <TextView
                n1:layout_width="fill_parent"
                n1:layout_height="0.5dip"
                n1:layout_marginTop="5.0dip"
                n1:background="@color/textgray" />

            <LinearLayout
                n1:id="@id/lL_myBottle"
                n1:layout_width="fill_parent"
                n1:layout_height="fill_parent"
                n1:layout_marginTop="10.0dip"
                n1:layout_weight="1.0"
                n1:gravity="center_vertical"
                n1:orientation="horizontal">

                <ImageView
                    n1:layout_width="34.0dip"
                    n1:layout_height="38.0dip"
                    n1:layout_marginLeft="10.0dip"
                    n1:src="@drawable/icon_bottle" />

                <TextView
                    n1:layout_width="wrap_content"
                    n1:layout_height="wrap_content"
                    n1:layout_marginLeft="10.0dip"
                    n1:text="我的气瓶"
                    n1:textSize="15.0sp" />

                <RelativeLayout
                    n1:layout_width="fill_parent"
                    n1:layout_height="wrap_content"
                    n1:gravity="right">

                    <ImageView
                        n1:layout_width="wrap_content"
                        n1:layout_height="wrap_content"
                        n1:layout_marginRight="10.0dip"
                        n1:src="@drawable/subway_new_flag" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                n1:layout_width="fill_parent"
                n1:layout_height="0.5dip"
                n1:layout_marginTop="5.0dip"
                n1:background="@color/textgray" />

            <LinearLayout
                n1:id="@id/lL_mySetting"
                n1:layout_width="fill_parent"
                n1:layout_height="fill_parent"
                n1:layout_marginTop="10.0dip"
                n1:layout_weight="1.0"
                n1:gravity="center_vertical"
                n1:orientation="horizontal">

                <ImageView
                    n1:layout_width="34.0dip"
                    n1:layout_height="38.0dip"
                    n1:layout_marginLeft="10.0dip"
                    n1:src="@drawable/icon_setting" />

                <TextView
                    n1:layout_width="wrap_content"
                    n1:layout_height="wrap_content"
                    n1:layout_marginLeft="10.0dip"
                    n1:text="系统版本"
                    n1:textSize="15.0sp" />
            </LinearLayout>

            <TextView
                n1:layout_width="fill_parent"
                n1:layout_height="0.5dip"
                n1:layout_marginTop="5.0dip"
                n1:background="@color/textgray" />

            <LinearLayout
                n1:id="@id/lL_myLogout"
                n1:layout_width="fill_parent"
                n1:layout_height="fill_parent"
                n1:layout_marginTop="10.0dip"
                n1:layout_weight="1.0"
                n1:gravity="center_vertical"
                n1:orientation="horizontal">

                <ImageView
                    n1:layout_width="34.0dip"
                    n1:layout_height="38.0dip"
                    n1:layout_marginLeft="10.0dip"
                    n1:src="@drawable/icon_userlogo" />

                <TextView
                    n1:layout_width="wrap_content"
                    n1:layout_height="wrap_content"
                    n1:layout_marginLeft="10.0dip"
                    n1:text="退出登录"
                    n1:textSize="15.0sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>