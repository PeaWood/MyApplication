<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:n1="http://schemas.android.com/apk/res/android"
    n1:id="@+id/activity_main"
    n1:layout_width="fill_parent"
    n1:layout_height="fill_parent"
    n1:orientation="vertical"
    n1:paddingBottom="@dimen/activity_vertical_margin"
    n1:paddingLeft="@dimen/activity_horizontal_margin"
    n1:paddingRight="@dimen/activity_horizontal_margin"
    n1:paddingTop="@dimen/activity_vertical_margin">

    <android.support.v7.widget.RecyclerView
        n1:id="@+id/recycler"
        n1:layout_width="fill_parent"
        n1:layout_height="wrap_content"
        n1:layout_marginLeft="5.0dip"
        n1:layout_marginTop="5.0dip"
        n1:overScrollMode="never" />

    <LinearLayout
        n1:layout_width="fill_parent"
        n1:layout_height="wrap_content"
        n1:layout_alignParentBottom="true"
        n1:layout_marginBottom="80.0dip"
        n1:layout_marginLeft="15.0dip"
        n1:layout_marginRight="15.0dip"
        n1:layout_marginTop="10.0dip"
        n1:orientation="horizontal">

        <TextView
            n1:layout_width="wrap_content"
            n1:layout_height="wrap_content"
            n1:layout_marginLeft="10.0dip"
            n1:text="上传结果："
            n1:textColor="@color/black"
            n1:textSize="20.0sp" />

        <TextView
            n1:id="@+id/textview_picUploadResult"
            n1:layout_width="wrap_content"
            n1:layout_height="wrap_content"
            n1:layout_marginLeft="10.0dip"
            n1:text=""
            n1:textSize="25.0sp" />
    </LinearLayout>

    <TextView
        n1:layout_width="fill_parent"
        n1:layout_height="0.5dip"
        n1:layout_marginTop="5.0dip"
        n1:background="@color/textgray" />

    <LinearLayout
        n1:id="@id/llybuttom"
        n1:layout_width="fill_parent"
        n1:layout_height="wrap_content"
        n1:layout_alignParentBottom="true"
        n1:layout_marginBottom="5.0dip"
        n1:orientation="vertical">

        <Button
            n1:id="@+id/button_upload"
            n1:layout_width="fill_parent"
            n1:layout_height="wrap_content"
            n1:layout_marginLeft="15.0dip"
            n1:layout_marginRight="15.0dip"
            n1:layout_marginTop="0.0dip"
            n1:background="@drawable/button_select"
            n1:padding="10.0dip"
            n1:text="照片上传"
            n1:textColor="@color/white"
            n1:textSize="20.0sp" />
    </LinearLayout>
</RelativeLayout>